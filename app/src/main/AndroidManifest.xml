<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homindolentrahar.meersani">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_meersani"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_meersani_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.detail.DetailItemActivity" />
        <activity android:name=".ui.categories.DetailCategoriesActivity" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.main.MainActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>